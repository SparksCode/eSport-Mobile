<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tdkdesigns.hundredthieves">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Schedule"
            android:label="@string/title_activity_schedule"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Roster"
            android:label="@string/title_activity_roster"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScheduleList"
            android:label="@string/title_activity_schedule_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TeamScheduleList"
            android:label="@string/title_activity_team_schedule_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlayerList"
            android:label="@string/title_activity_roster_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlayerDetail"
            android:label="@string/title_activity_player_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SocialLinks"
            android:label="@string/title_activity_social_links"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>